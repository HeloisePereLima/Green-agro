<%- include('../includes/header.ejs', {titulo : 'Adicionar um Produto novo '}) %>
<head>
    <link rel="stylesheet" href="/css/style.css">
</head>
<main>
    <h2>Adicionando uma novo produto </h2>
    <form action="/produtos/novo" class="form" method="post">
        <div class="form-group">
            <label for="nome_produto">Nome do Produto:</label>
            <input type="text" id="id_produto" name="nome_produto" required>
        </div>
        <div class="form-group">
            <label for="estoque">Estoque:</label>
            <input type="text" id="estoque" name="estoque" required>
        </div>
        <div class="form-group">
            <label for="estoque_minimo">Estoque Min√≠mo:</label>
            <input type="text" id="estoque_minimo" name="estoque_minimo" required>
        </div>
        <div class="form-group">
            <label for="valor">Valor:</label>
            <input type="text" id="valor" name="valor" required>
        </div>
        <div class="form-group foto">
            <label for="foto">foto</label>
            <input type="text" id="foto" name="foto" required>
        </div>

        <div class="form-group">
            <label for="id_categorias">Categoria:</label>
            <select id="id_categorias" name="id_categorias">
                <% for (let categoria of categoriasCadastradas) { %>
                    <option value="<%= categoria.id_categorias %>"><%= categoria.nome_categorias %> <%= categoria.estoque %></option>
            <% } %>
            </select>
        </div>
        <button type="submit" class="btn btn-success"> Adicionar</button>
        <a href="/produtos" class="btn btn-secondery">Cancelar</a>
    </form>
</main>

<%- include('../includes/footer.ejs') %>